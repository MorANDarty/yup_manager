<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorButtonProfilePressed"/>
            <corners android:radius="15dp" />
            <padding android:left="5dp" android:right="5dp" />
        </shape>

    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorButtonProfile" android:startColor="@color/colorButtonProfile" />
            <corners android:radius="15dp" />
            <padding android:left="5dp" android:right="5dp" />
        </shape>
    </item>

</selector>