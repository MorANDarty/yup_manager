<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/redPressed" />
            <padding android:bottom="8dp" android:left="8dp" android:right="16dp" android:top="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorRedText" android:startColor="@color/colorRedText" />

            <corners android:radius="12dp" />

            <padding android:bottom="8dp" android:left="8dp" android:right="16dp" android:top="8dp" />
        </shape>
    </item>
</selector>