<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="15dp" />
            <solid android:color="@color/redPressed" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorRedText" android:startColor="@color/colorRedText" />

            <corners android:topLeftRadius="15dp" />

            <padding android:bottom="24dp" android:left="24dp" android:right="24dp" android:top="24dp" />
        </shape>
    </item>
</selector>