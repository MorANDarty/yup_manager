<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.ui.main.profile.ProfileFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_wallpaper"
            android:scaleType="center"
            android:src="@drawable/basketball_walp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_background"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="32dp"
            android:text="Yup."
            android:textColor="@color/colorRedText"
            android:fontFamily="@font/sanspro_bold"
            android:id="@+id/img_yup_icon"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_like"
            android:src="@drawable/ic_heart"
            app:layout_constraintLeft_toRightOf="@+id/tv_rating"
            app:layout_constraintTop_toTopOf="@+id/img_rating"
            android:layout_marginLeft="40dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_likes"
            app:layout_constraintLeft_toRightOf="@+id/img_like"
            app:layout_constraintTop_toTopOf="@+id/tv_rating"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="99"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/sanspro_italic"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textSize="32dp"
            app:layout_constraintLeft_toLeftOf="@id/img_yup_icon"
            app:layout_constraintTop_toBottomOf="@+id/img_yup_icon"
            android:layout_marginTop="40dp"
            android:text="Hideo Kojima"
            android:textColor="@color/white"
            android:gravity="left"
            android:fontFamily="@font/futura_new_book"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_rating"
            app:layout_constraintLeft_toLeftOf="@id/img_yup_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_star"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/img_rating"
            app:layout_constraintTop_toTopOf="@+id/img_rating"
            android:textColor="@color/white"
            android:text="4.8"
            android:id="@+id/tv_rating"
            android:fontFamily="@font/sanspro_italic"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_exit"
            android:text="@string/quit"
            style="@style/ButtonProfile"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/sanspro_bold"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_exit"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_help"
            android:text="Помощь"
            style="@style/ButtonProfile"
            android:fontFamily="@font/sanspro_bold"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_make_promocode"
            style="@style/ButtonProfile"
            app:layout_constraintBottom_toTopOf="@+id/btn_help"
            android:layout_marginBottom="20dp"
            android:text="Создать промокод"
            android:fontFamily="@font/sanspro_bold"
            />

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pb_profile"
            android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>