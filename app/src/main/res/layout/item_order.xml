<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

    <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            android:elevation="3dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_avatar_item"

                android:scaleType="center"
        />

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Аренда корта с инвентарем"
                  android:layout_marginLeft="10dp"
                  android:textColor="@color/colorPrimaryText"
                  android:id="@+id/tv_order_name_item"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time_item"
                    android:layout_marginLeft="10dp"
                    android:text="13:20"
                    android:textColor="@color/colorRedText"
                    android:background="@drawable/background_time"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_customer_name"
                    android:layout_marginLeft="10dp"
                    android:text="Виталий Царь"
                    android:textColor="@color/colorSecondaryText"
            />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>